<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sakila.mapper.FilmCategoryMapper">

	<!-- /on//on/removeFilmCategory : filmOne에서 카테고리 삭제 -->
	<delete id="deleteFilmCategory" parameterType="com.example.sakila.vo.FilmCategory">
		DELETE FROM film_category
		WHERE film_id = #{filmId} AND category_id = #{categoryId}
	</delete>

	<!-- /on/addFilmCategory : filmOne에서 카테고리 추가 -->
	<insert id="insertFilmCategory" parameterType="com.example.sakila.vo.FilmCategory">
		INSERT INTO film_category(
			film_id
			, category_id
		) VALUES (
			#{filmId}
			, #{categoryId}
		)		
	</insert>

	<!-- /on/filmOne : 특정필름의 카테고리 리스트 -->
	<select id="selectFilmCategoryListByFilm" parameterType="Integer">
		SELECT
			fc.film_id filmId
			, fc.category_id categoryId
			, c.name name
		FROM film_category fc INNER JOIN category c
		ON fc.category_id = c.category_id
		WHERE fc.film_id = #{filmId}
	</select>

	<!-- 필름 삭제시  -->
	<delete id="deleteFilmCategoryByFilm"
				parameterType="Integer">
			DELETE FROM film_category
			WHERE film_id = #{filmId}
	</delete>
	
	<!-- 카테고리 삭제시 -->
	<delete id="deleteFilmCategoryByCategory"
				parameterType="Integer">
			DELETE FROM film_category
			WHERE category_id = #{categoryId}
	</delete>
</mapper>